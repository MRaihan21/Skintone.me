    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/icon"
        android:background="@drawable/rounded_gray2"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button" />


            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="92dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/my_favorite"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_love"
                app:layout_constraintBottom_toTopOf="@+id/frameLayout3"
                app:layout_constraintStart_toStartOf="@+id/frameLayout3"
                app:layout_constraintTop_toBottomOf="@+id/button" />

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/rounded_colorprimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_circle_skintone"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_circle"
                        app:layout_constraintEnd_toStartOf="@+id/iv_circle_colorpalette"
                        app:layout_constraintHorizontal_bias="0.421"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iv_circle_colorpalette" />

                    <ImageView
                        android:id="@+id/iv_circle_colorpalette"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_circle_jewerlycolor"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_circle_colorpalette"
                        app:layout_constraintTop_toTopOf="@+id/iv_circle_colorpalette" />


                    <TextView
                        android:id="@+id/tv_text_skintone"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/rounded_pink"
                        android:text="@string/skintone"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/iv_circle_skintone"
                        app:layout_constraintStart_toStartOf="@+id/iv_circle_skintone"
                        app:layout_constraintTop_toBottomOf="@+id/iv_circle_skintone" />

                    <TextView
                        android:id="@+id/tv_text_colorpalette"
                        android:layout_width="80dp"
                        android:padding="4dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_pink"
                        android:text="@string/color_palette"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/iv_circle_colorpalette"
                        app:layout_constraintStart_toStartOf="@+id/iv_circle_colorpalette"
                        app:layout_constraintTop_toBottomOf="@+id/iv_circle_colorpalette" />

                    <TextView
                        android:id="@+id/tv_text_jewerlycolor"
                        android:layout_width="80dp"
                        android:padding="4dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_pink"
                        android:text="@string/jewelry_color"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/iv_circle_jewerlycolor"
                        app:layout_constraintStart_toStartOf="@+id/iv_circle_jewerlycolor"
                        app:layout_constraintTop_toBottomOf="@+id/iv_circle_jewerlycolor" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>